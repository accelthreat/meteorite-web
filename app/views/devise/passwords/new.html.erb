<div class="container-fluid bg-main h-100">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="login-surface mt-3">
        <div class="d-flex flex-column p-5">
          <div class="pb-3"><h4>Forgot your password?</h4></div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary action-btn" %>
            </div>

            <div class="form-group">
              <%= link_to "Login", new_user_session_path, class: "text-link"%><br>
              <%= link_to "Sign up", new_user_registration_path, class: "text-link"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

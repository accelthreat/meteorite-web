= form_for(@micropost, html: { multipart: true }) do |f|
  .form-group.mt-5
    = f.text_area :content, placeholder: "What's poppin'?", class: "form-control micropost-text-area"
  .d-flex
    = f.submit "Post", class: "btn btn-primary action-btn mr-2 px-5"
    %span.picture
      %input#micropost_picture.micropost_picture{:accept => "image/jpeg,image/gif,image/png", :name => "micropost[picture]", :type => "file"}/
      %label.custom-file-upload{:for => "micropost_picture"}
        %span.oi.oi-image{"aria-hidden" => "true", :title => "image"}
        Upload Pic

%li{:id => "micropost-#{micropost.id}"}
  .media
    = image_tag micropost.user.picture? ? micropost.user.picture.url : "logo_stripped.png", class: "micropost-img"
    .media-body.ml-3.w-100
      .d-flex
        %h5.micropost-name.pr-1
          = link_to micropost.user.name, user_path(micropost.user), class: "micropost-name profile-link"
        %h5.micropost-handle.pr-1= "@#{micropost.user.handle}"
        %h5.micropost-timestamp.pr-2= time_ago_in_words(micropost.created_at)
        - if current_user.id == micropost.user.id
          %h6.pb-0.mb-0
            = link_to "delete", micropost, method: :delete, class: "profile-link-accent"
      %p.micropost-content= micropost.content
      = image_tag micropost.picture.url, class: "img-fluid pb-5" if micropost.picture?

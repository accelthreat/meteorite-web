<script type="text/javascript">
    <% if @type == :selected %>
        all_feed = document.querySelector('#all-posts')
        all_feed.addEventListener('click', function() {
        history.pushState({type: 'all'}, '', '/home/all')
        })
    <% elsif @type == :all %>
        index_feed = document.querySelector('#followers-only-posts')
        index_feed.addEventListener('click', function() {
        history.pushState({type: 'all'}, '', '/home/index')
        })
    <% end %>
</script>

<% provide(:title, @title) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xl-4 offset-xl-1 col-8 offset-2">
      <div class="login-surface mt-3 p-5">
        <div class="row">
          <div class="col">
              <div class="media">
                <%= image_tag @user.picture? ? @user.picture.url : "logo_stripped.png", class: "profile-img"%>
                <div class="media-body ml-3 w-100">
                  <div class="d-flex flex-column">
                  <div>
                    <h4 class="mb-0"><%= @user.name%></h4>
                  </div>
                     <div>
                    <h5 class="mb-0"><%= link_to "View my profile", current_user, class: "profile-link"%></h5>
                  </div>
                    <div>
                      <span class="profile-posts-length"><%= @user.microposts.count %></span>
                      <span class="profile-posts-label"><%= "post".pluralize(@user.microposts.count)%></span>
                    </div>
                  </div>
                </div>
              </div>
              </div>
            </div>
        <%= render 'follow_stats'%>
      </div>  
    </div>
        <div class="col-xl-6 offset-xl-0 col-8 offset-2">
          <div class="login-surface mt-3">
          <span class="h4-reg pr-2"><%= @title %></span>
            <% if @users.any? %>
              <ul class="microposts pt-3">
                <%= render @users %>
              </ul>
            <% end %>
        </div>
    </div>
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Meteorite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-expand-lg navbar-light bg-primary-color-3">
    <div class="container">
      <a class="navbar-brand" href="/home/index"> 
        <%= image_tag "logo_stripped.png", class: "navbar-logo"%>
        Meteorite
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse flex-d align-items-baseline" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "Home", home_index_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
              <li class="nav-item pr-3">
              <b> <%= link_to current_user.name, user_path(current_user), class: "nav-link" %></b>
            </li>
            <li class="nav-item">
              <%= button_to "Sign Out", destroy_user_session_path, :method => "delete", :class => "btn btn-primary"  %>
            </li>
           <% else %>
           <li>
           <div class="d-flex h-100">
            <div class="h-100 align-self-center">
              <%= button_to "Login", new_user_session_path, :method => "get", :class => "btn btn-primary mr-1" %>
            </div>
            <div>
            <%= button_to "Sign up",  new_user_registration_path, :method => "get", :class => "btn btn-outline-primary" %>
            </div>
           </div>
            </li>

            <% end %>
        </ul>
      
      </div>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
